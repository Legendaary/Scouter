<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="porcomsci.basketballscout.com.basketballscount.mainflow.SummaryQuarterActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:textSize="12pt"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.14"
        android:gravity="center"
        android:background="@drawable/vs"
        android:id="@+id/summary_quarter_schoolLabel">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <TextView
            android:textSize="15pt"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:gravity="center"
            android:background="#fff2d97f"
            android:id="@+id/summary_quarter_score1">
        </TextView>

        <TextView
            android:layout_height="match_parent"
            android:text="End"
            android:layout_width="0dp"
            android:layout_weight="0.40"
            android:gravity="center"
            android:textSize="20pt"
            android:background="#bdef1f14"
            android:id="@+id/summary_quarter_end">
        </TextView>

        <TextView
            android:textSize="15pt"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:background="#e1abf2db"
            android:id="@+id/summary_quarter_score2">
        </TextView>

    </LinearLayout>

</LinearLayout>
